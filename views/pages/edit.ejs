<div class="jumbotron text-center">
    <h1> Editing <%= habit.name %> </h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form action="/habits/<%= habit.slug %>/edit" method="POST">
            <div class="form-group">
                <label> Name </label>
                <input type="text" name="name" class="form-control" value="<%= habit.name %>">
            </div>

            <div class="form-group">
                <label> Description </label>
                <textarea name="description" rows="2" class="form-control"><%= habit.description %></textarea>
            </div>

            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>

    </div>
</div>